                        android:text="â€º"
                        android:textSize="32sp"
                        android:textColor="@color/gray_text" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Visit Us Card (Updated) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/card_white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Visit Us"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/bhagwa_saffron"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plan your visit to our temple and explore the divine atmosphere of ISKCON Kopergaon"
                        android:textSize="14sp"
                        android:textColor="@color/gray_text"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="16dp" />

                    <Button
                        android:id="@+id/btn_visit_temple"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Location Timings"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:background="@drawable/gradient_card_red"
                        android:paddingVertical="12dp"
                        android:textAllCaps="false"
                        android:elevation="0dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Address Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/card_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temple Address"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bhagwa_saffron"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ISKCON Temple\nKopergaon, Maharashtra\nIndia"
                    android:textSize="15sp"
                    android:textColor="@color/dark_text"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Temple Timings"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bhagwa_saffron"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Morning: 4:30 AM - 1:00 PM\nEvening: 4:00 PM - 8:30 PM"
                    android:textSize="15sp"
                    android:textColor="@color/dark_text"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>