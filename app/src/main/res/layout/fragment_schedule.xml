<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:contentDescription="Radha Krishna"
            android:scaleType="centerCrop"
            android:src="@drawable/charan"
            android:layout_margin="9dp"
            app:cornerSize="16dp" />
        <!-- Daily Schedule Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/card_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Temple Timings"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/bhagwa_saffron"
                    android:layout_marginBottom="16dp" />

                <!-- Open Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@color/light_saffron">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Open Time"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/sacred_orange" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4:30 AM"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_text" />

                </LinearLayout>

                <!-- Mangal Aarti -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Mangal Aarti"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/sacred_orange" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7:00 AM"
                        android:textSize="15sp"
                        android:textColor="@color/dark_text" />

                </LinearLayout>

                <!-- Tulsi Aarti -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@color/light_saffron">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Tulsi Aarti"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/sacred_orange" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7:20 AM"
                        android:textSize="15sp"
                        android:textColor="@color/dark_text" />

                </LinearLayout>

                <!-- Srimad Bhagavatam Classes -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Bhagavatam Classes"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/sacred_orange" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7:30 AM"
                        android:textSize="15sp"
                        android:textColor="@color/dark_text" />

                </LinearLayout>

                <!-- Close Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="@color/light_saffron">

                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Close Time"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/sacred_orange" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7:30 PM"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/dark_text" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Additional Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/card_white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Important Notes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/bhagwa_saffron"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Temple opens daily at 4:30 AM\nâ€¢ Mangal Aarti is the first program of the day\nâ€¢ Devotees are welcome to attend all programs\nâ€¢ Temple closes at 7:30 PM\nâ€¢ Special timings during festivals"
                    android:textSize="14sp"
                    android:textColor="@color/dark_text"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quote Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/gradient_card_blue"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ•‰ï¸"
                    android:textSize="32sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join us in our daily spiritual programs and experience divine bliss"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>