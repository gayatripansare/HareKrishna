<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_song"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/card_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Song Image -->
        <androidx.cardview.widget.CardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/img_song"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_music_placeholder" />

        </androidx.cardview.widget.CardView>

        <!-- Song Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_gravity="center_vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/txt_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hare Krishna Maha Mantra"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_text"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Artist -->
            <TextView
                android:id="@+id/txt_song_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Srila Prabhupada"
                android:textSize="14sp"
                android:textColor="@color/dark_text"
                android:alpha="0.7"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Category & Duration -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txt_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bhajan"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/category_badge_bg"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp" />

                <TextView
                    android:id="@+id/txt_song_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:30"
                    android:textSize="12sp"
                    android:textColor="@color/dark_text"
                    android:alpha="0.7"
                    android:layout_marginStart="12dp"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

        <!-- Right Side: Play Icon and Delete Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <!-- Delete Button (Only for Admin) -->
            <ImageButton
                android:id="@+id/btn_delete_song"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone"
                android:contentDescription="Delete song"
                app:tint="@android:color/holo_red_dark"
                android:layout_marginBottom="8dp" />

            <!-- Play Icon -->
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_play_circle"
                app:tint="@color/bhagwa_saffron" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>