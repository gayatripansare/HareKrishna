<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_9"
        android:scaleType="centerCrop"
        android:alpha="0.3" />

    <!-- Overlay to darken background (optional) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Your existing LinearLayout content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_back"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Now Playing"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center" />

            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <!-- Song Album Art -->
        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp">

            <ImageView
                android:id="@+id/img_song_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_music_placeholder" />

        </androidx.cardview.widget.CardView>

        <!-- Song Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <TextView
                android:id="@+id/txt_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hare Krishna Maha Mantra"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/txt_song_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Srila Prabhupada"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:alpha="0.8"
                android:gravity="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Seek Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressTint="@android:color/white"
                android:thumbTint="@android:color/white"
                android:progressBackgroundTint="#80FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txt_current_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0:00"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5:30"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Player Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <ImageButton
                android:id="@+id/btn_stop"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_stop"
                android:background="@drawable/player_button_bg"
                android:layout_marginEnd="24dp"
                app:tint="@android:color/white" />

            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_play"
                android:background="@drawable/player_button_large_bg"
                android:elevation="6dp"
                app:tint="@color/bhagwa_saffron" />

        </LinearLayout>

        <!-- Download Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:paddingStart="32dp"
            android:paddingEnd="32dp">

            <Button
                android:id="@+id/btn_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download for Offline"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/sacred_orange"
                android:drawableStart="@drawable/ic_download"
                android:drawablePadding="8dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/progress_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_download_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“ Downloaded"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>