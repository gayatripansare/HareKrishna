<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF8E1">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_gradient_bg"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back_arrow"
            android:contentDescription="Back"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="ðŸ™ Assign Seva"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- User name banner -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp"
                android:backgroundTint="#FFF3E0">

                <TextView
                    android:id="@+id/seva_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Assigning seva to: Devotee"
                    android:textColor="@color/bhagwa_saffron"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center" />

            </androidx.cardview.widget.CardView>

            <!-- Seva Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seva Title"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/seva_title"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edit_text_bg"
                android:hint="e.g. Flower decoration, Prasadam preparation"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="15sp"
                android:layout_marginBottom="24dp" />

            <!-- Seva Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seva Details"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/seva_description"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/edit_text_bg"
                android:hint="Describe the seva in detail â€” what, when, where..."
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:textSize="15sp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_marginBottom="32dp" />

            <!-- Send Button -->
            <Button
                android:id="@+id/btn_send_seva"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:backgroundTint="@color/bhagwa_saffron"
                android:text="ðŸ™ Send Seva Notification"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="12dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>